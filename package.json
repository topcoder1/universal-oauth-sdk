{
  "name": "universal-oauth-sdk-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r --filter ./packages... run build",
    "test": "pnpm -r --filter ./packages... run test",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,json}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,json}\"",
    "lint:manifests": "pnpm -w --filter @oauth-kit/manifest-tools run lint",
    "dev": "pnpm -r --filter ./packages... run dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.10.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
